# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "disk /"
order += "disk /home"
order += "load"
order += "cpu_usage"
order += "run_watch VPN"
order += "wireless wlp1s0"
order += "battery 0"
order += "volume master"
order += "tztime local"

wireless wlp1s0 {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime %consumption"
        integer_battery_capacity = true
        low_threshold = 10
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%I:%M%p %b %d %Y"
}

cpu_usage {
        format = "CPU: %usage"
}

load {
        format = "LOAD: %1min"
}

disk "/" {
        format = "/ %avail"
}

disk "/home" {
        format = "/home %avail"
}

volume master {
        format = "♪: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
